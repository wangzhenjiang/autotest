<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
	">

    <context:component-scan base-package="com.wzj.learn.autotest.service" />
    <context:component-scan base-package="com.wzj.learn.autotest.task" />

    <task:scheduled-tasks>
        <!-- 测试配置
        <task:scheduled ref="clockCron" method="cron" cron="0 0/1 * * * ?"/>
        -->
        <task:scheduled ref="clockCron" method="cron" cron="0 25/21 8   * * ?"/>
        <task:scheduled ref="clockCron" method="cron" cron="0 27/21 21  * * ?"/>
    </task:scheduled-tasks>
</beans>